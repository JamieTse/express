<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CreditRecordFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/light_pink"
        android:gravity="center_horizontal"
        android:text="我的信用积分"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/fcr_tv_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/light_green"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fcr_tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/light_green"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <com.jamie.express.listviews.RefreshableListView
        android:id="@+id/fcr_rlv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"></com.jamie.express.listviews.RefreshableListView>

</LinearLayout>
